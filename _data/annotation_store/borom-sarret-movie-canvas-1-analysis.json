    {
      "@context": "http://www.w3.org/ns/anno.jsonld",
      "id": "borom-sarret-movie-canvas-1-analysis-annotation-6.json",
      "type": "Annotation",
      "motivation": [
        "supplementing",
        "commenting"
      ],
      "body": {
        "type": "TextualBody",
        "value": "The medallion plays a puzziling role in the film. It is not clear what the medallion is for, and an online search of Senegal military regalia yields no answer. Borom Sarret is almost certainly the one who drops the medal, and not the policeman. One possibility is the medal was payment for one of Borom's services. Another possibility is the medal belonged to the man who requested Borom take him to the French Quarter.",
        "format": "text/plain",
        "purpose": "commenting"
      },
